<h1>Create a new recipe</h1>

<%= form_with(model: @recipe, url: recipes_path, method: :post) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :cooking_time %>
    <%= f.time_field :cooking_time %>
  </div>

  
  <div>
    <%= f.label :preparation_time %>
    <%= f.time_field :preparation_time %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.submit 'Create Recipe' %>
<% end %>
