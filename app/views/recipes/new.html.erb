<h1>Create a new recipe</h1>

<%= form_with(model: @recipe, url: recipes_path, method: :post) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Enter your username" %>
  </div>

  <div>
    <%= f.label :cooking_time %>
    <%= f.text_field :cooking_time, placeholder: "HH:MM (e.g., 01:30)" %>
  </div>

  <div>
    <%= f.label :preparation_time %>
    <%= f.text_field :preparation_time, placeholder: "HH:MM (e.g., 00:45)" %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Desribe your recipe" %>
  </div>

  <%= f.submit 'Create Recipe' %>
<% end %>
