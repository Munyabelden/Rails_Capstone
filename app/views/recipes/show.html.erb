<div>
  <h2><%= @recipe.name %></h2>
  <span>Preparation time: <%= format_time(@recipe.preparation_time) %></span>
  <span>Cooking time: <%= format_time(@recipe.cooking_time) %></span>
  <% if current_user == @recipe.user %>
    <%= form_with(model: @recipe, url: publicize_recipe_path(@recipe), method: :patch) do |f| %>
      <%= f.submit 'Make Public' %>
    <% end %>
  <% end %>
  <table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.measurement_unit %></td>
          <td><%= food.price %></td>
          <td><%= food.user.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
