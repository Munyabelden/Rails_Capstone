<section class="user-recipes">
  <h1 class="title"><%= @current_user&.name %>'s Recipes</h1>

  <div class="recipe-list">
    <% @recipes.each do |recipe| %>
      <div class="recipe">
        <div>
          <a href="<%= recipe_path(recipe) %>">
            <h2><%= recipe.name %></h2>
          </a>
          <% if can? :destroy, recipe %>
            <%= button_to recipe_path(recipe), method: :delete, class: 'delete-button', data: { confirm: 'Are you sure you want to delete this recipe?' } do %>
              Remove
            <% end %>
          <% end %>
        </div>
        <a href="<%= recipe_path(recipe) %>" class="describe"><p><%= recipe.description %></p></a>
      </div>
    <% end %>
  </div>
  <%= link_to 'Create New Recipe', new_recipe_path, class: 'create-button' %>
</section>
