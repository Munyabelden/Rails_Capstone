<section class="recipes-header">
  <div>
    <h1 class="title"><%= @current_user&.name %>'s Recipes</h1>
    <p>Unleash Your Inner Chef: Delight in the process of curating your recipes using our intuitive interface. Effortlessly jot down ingredients, measurements, and step-by-step instructions, all while our platform elegantly organizes your culinary innovations.</p>
    <%= link_to 'Create New Recipe', new_recipe_path, class: 'create-button' %>
  </div>
</section>

<section class="user-recipes">
  <div class="recipe-list">
    <% @recipes.each do |recipe| %>
      <div class="recipe">
        <div>
          <a href="<%= recipe_path(recipe) %>">
            <h2><%= recipe.name %></h2>
          </a>
          <% if can? :destroy, recipe %>
            <%= button_to recipe_path(recipe), method: :delete, class: 'delete-button', data: { confirm: 'Are you sure you want to delete this recipe?' } do %>
              Remove
            <% end %>
          <% end %>
        </div>
        <a href="<%= recipe_path(recipe) %>" class="describe"><p><%= recipe.description %></p></a>
      </div>
    <% end %>
  </div>
</section>
